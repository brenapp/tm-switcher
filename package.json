{
  "name": "tm-switcher",
  "version": "1.10.0",
  "main": "src/main.ts",
  "bin": "out/switcher/main.cjs",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "switcher:build": "rollup -c",
    "switcher:run": "node out/switcher/main.cjs",
    "switcher:package": "npx @yao-pkg/pkg package.json --out-path bundle && sh scripts/copy_switcher.sh",
    "switcher:package:latest-macos-x64": "npx @yao-pkg/pkg package.json --target latest-macos-x64 --output ./bundle/tm-switcher-macos-x64 && sh scripts/copy_switcher.sh",
    "switcher:package:latest-macos-arm64": "npx @yao-pkg/pkg package.json --target latest-macos-arm64 --output ./bundle/tm-switcher-macos-arm64 && sh scripts/copy_switcher.sh",
    "switcher:package:latest-win-x64": "npx @yao-pkg/pkg package.json --target latest-win-x64 --output ./bundle/tm-switcher-win-x64 && sh scripts/copy_switcher.sh",
    "switcher:package:latest-linux-x64": "npx @yao-pkg/pkg package.json --target latest-linux-x64 --output ./bundle/tm-switcher-linux-x64 && sh scripts/copy_switcher.sh",
    "host:build": "npm -w host run tauri build"
  },
  "workspaces": [
    ".",
    "host"
  ],
  "dependencies": {
    "@dotenvx/dotenvx": "^1.32.0",
    "@octokit/types": "^13.5.0",
    "@types/inquirer": "^7.3.1",
    "ajv": "^8.17.1",
    "atem-connection": "^3.0.1",
    "chalk": "^4.1.2",
    "inquirer": "^7.3.3",
    "obs-websocket-js": "^5.0.1",
    "rollup-plugin-dotenv": "^0.5.1",
    "vex-tm-client": "^1.4.1"
  },
  "pkg": {
    "scripts": [
      "out/switcher/main.cjs"
    ],
    "assets": [
      "node_modules/@julusian/freetype2/prebuilds/**/*"
    ],
    "targets": [
      "latest-macos-x64",
      "latest-macos-arm64",
      "latest-win-x64",
      "latest-linux-x64"
    ],
    "outputPath": "bundle"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^20.9.4",
    "@yao-pkg/pkg": "^6.2.0",
    "rollup": "^4.29.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "typescript": "^5.7.2"
  }
}
